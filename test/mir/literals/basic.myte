module test

fun use<T>(x: T) {}

val x: Unit = ()

val y1: Int = 500

val y2: Byte = 1

val y3: Long = 2147483648

val c1: Int = 'a'

val c2: Byte = 'a'

val c3: Long = 'a'

val z: String = "test"

val a1: Bool = true

fun main() {
  // Within Int range, inferred as ints
  use(0);
  use(2147483647);

  // Outside Int range, inferred as Long
  use(2147483648);

  // Multiple Int literals
  use(2 + 4 + 6);
  use(2 + 2147483648 + 6);

  use(useAll);
}

fun useAll() {
  use(x);
  use(y1);
  use(y2);
  use(y3);
  use(c1);
  use(c2);
  use(c3);
  use(z);
  use(a1);
}