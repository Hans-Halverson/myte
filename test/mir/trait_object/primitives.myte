module test

import std.string.ToString

fun useToString(x: trait ToString): String = x.toString()

fun testUnitPromotion(x: Unit) {
  useToString(x);
  useToString(());
}

fun testBoolPromotion(x: Bool) {
  useToString(x);
  useToString(true);
}

fun testBytePromotion(x: Byte) {
  useToString(x);
  useToString((1: Byte));
}

fun testIntPromotion(x: Int) {
  useToString(x);
  useToString(1);
}

fun testLongPromotion(x: Long) {
  useToString(x);
  useToString((1: Long));
}

type ZeroSize (Unit)
methods ZeroSize {
  implements ToString

  override fun toString(): String = ""
}

fun testZeroSizePromotion(x: ZeroSize) {
  useToString(x);
  useToString(ZeroSize (use(())));
}

fun use<T>(x: T) {}

fun main() {
  use(testUnitPromotion);
  use(testBoolPromotion);
  use(testBytePromotion);
  use(testIntPromotion);
  use(testLongPromotion);
  use(testZeroSizePromotion);
}