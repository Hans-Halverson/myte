module test

import std.io.error.EOF
import std.io.file.File
import std.io.read.BufferedReader
import std.test.{assertEqual, assertOk, fail}

val FILE_NAME: String = "test/program/stdlib/io/file.txt"

val FILE_CONTENTS: String =
`a text file
with short lines:

and blank lines:


and long lines:

`

fun testFileReadToString() {
  match (File.open(FILE_NAME)) {
    | Ok (file) -> {
      val reader = BufferedReader.new(file);
      match (reader.readToString()) {
        | Ok (string) -> assertEqual(string, FILE_CONTENTS)
        | Error _ -> fail()
      }
    }
    | Error _ -> fail()
  }
}

fun testFileReadLines() {
  match (File.open(FILE_NAME)) {
    | Ok (file) -> {
      val reader = BufferedReader.new(file);
      assertOk(reader.readLine(), "a text file");
      assertOk(reader.readLine(), "with short lines:");
      assertOk(reader.readLine(), "");
      assertOk(reader.readLine(), "and blank lines:");
      assertOk(reader.readLine(), "");
      assertOk(reader.readLine(), "");
      assertOk(reader.readLine(), "and long lines:");
      assertOk(reader.readLine(), "");
      assertOk(reader.readLine(), "");

      match (reader.readLine()) {
        | Error (EOF) -> {}
        | _ -> fail()
      }
    }
    | Error _ -> fail()
  }
}

fun main() {
  testFileReadToString();
  testFileReadLines();
}