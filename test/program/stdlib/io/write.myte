module test

import std.io.file.File
import std.io.read.BufferedReader
import std.io.write.BufferedWriter
import std.test.{assertEqual, assertOk, fail}

val TEST_FILE_NAME: String = "__myte_tmp_test_file"

val FILE_CONTENTS: String =
`a text file
with short lines:

and blank lines:


and long lines:

`

fun testWriteWithBufferSize(size: Int) {
  match (File.create(TEST_FILE_NAME)) {
    | Ok (file) -> {
      // Write all contents of file
      val writer = BufferedWriter.newWithSize(file, size);

      assertOk(writer.writeString("a text file\n"), ());
      assertOk(writer.writeString("with short lines:\n"), ());
      assertOk(writer.writeByte('\n'), ());
      assertOk(writer.writeString("and blank lines:\n"), ());
      assertOk(writer.writeByte('\n'), ());
      assertOk(writer.writeByte('\n'), ());
      assertOk(writer.writeString("and long lines:\n"), ());
      assertOk(writer.writeString("\n"), ());
      assertOk(writer.writeString(""), ());

      assertOk(writer.flush(), ());
      assertOk(file.close(), ());

      // Read back contents of file
      match (File.open(TEST_FILE_NAME)) {
        | Ok (file) -> {
          val reader = BufferedReader.new(file);
          match (reader.readToString()) {
            | Ok (string) -> assertEqual(string, FILE_CONTENTS)
            | Error _ -> fail()
          }
        }
        | Error _ -> fail()
      }
      
      // Delete file
      assertOk(File.remove(TEST_FILE_NAME), ());
    }
    | Error _ -> fail()
  }
}

fun main() {
  testWriteWithBufferSize(30);
  testWriteWithBufferSize(1024);
}