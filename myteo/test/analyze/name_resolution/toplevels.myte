module Test

// Top level names can be referenced before they are defined
fun topLevelBeforeTest() {
  topLevelFunc;
  topLevelVal;
  (1: topLevelType);

  {
    topLevelFunc;
    topLevelVal;
    (1: topLevelType);
  }

  fun inner() {
    topLevelFunc;
    topLevelVal;
    (1: topLevelType);
  }
}

fun topLevelFunc() {}
val topLevelVal: int = 1;
type topLevelType = int

// Top level names can be referenced after they are defined
fun topLevelAfterTest() {
  topLevelFunc;
  topLevelVal;
  (1: topLevelType);

  {
    topLevelFunc;
    topLevelVal;
    (1: topLevelType);
  }

  fun inner() {
    topLevelFunc;
    topLevelVal;
    (1: topLevelType);
  }
}

