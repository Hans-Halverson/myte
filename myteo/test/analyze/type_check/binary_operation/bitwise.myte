module test

fun bitwise() {
  // Non-erroring cases
  (1 & 1: Int);
  (1 & 2 & 3 & 4: Int);
  (1 | 2: Int);
  (1 ^ 2: Int);

  // If only one type is int error and type expression with that type
  (1 & true: Int);
  (true & "a": String);

  // If both types are ints but incompatible error and type expression with
  // left hand type.
  val i: Int = 1;
  val b: Byte = 2;
  (i & b: Int);
  (b & i: Byte);

  // Literal inferred as correct Int type
  (1 & b: Int);
  (b & 1: Int);
}

