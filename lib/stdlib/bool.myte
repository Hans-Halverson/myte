module std.bool

import std.hash.Hashable
import std.int.Int
import std.ops.Equatable
import std.string.{String, ToString}

builtin type Bool

methods Bool {
  implements Equatable

  builtin override fun equals(other: Bool): Bool
}

methods Bool {
  implements Hashable

  override fun hash(): Int =
    if (this) {
      1
    } else {
      0
    }
}

methods Bool {
  implements ToString

  override fun toString(): String =
    if (this) {
      "true"
    } else {
      "false"
    }
}